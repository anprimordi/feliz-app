<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_thumbnail"
            android:layout_width="@dimen/width_home_vendor_item_thumbnail"
            android:layout_height="@dimen/height_home_vendor_item_thumbnail"
            android:scaleType="centerCrop"
            android:layout_marginHorizontal="@dimen/margin_small"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.FelizApps.ImageView.Rounded"
            tools:layout_height="80dp"
            tools:layout_width="128dp"
            tools:src="@drawable/bmp_sample" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:textAppearance="@style/TextAppearance.FelizApps.Body"
            tools:text="@tools:sample/lorem/random" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:layout_marginHorizontal="@dimen/margin_tiny"
            android:drawableStart="@drawable/ic_baseline_location_on_24"
            android:gravity="center_vertical"
            android:singleLine="true"
            tools:text="Malang" />
    </LinearLayout>
</layout>